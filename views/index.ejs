<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nirva-Agni | Home</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/index.css">
    <style>
        
        .hero-image {
            margin-top: 120px;  
            margin-left: -200px; 
            width: 80%;  
            height: 100%; 
        }

        spline-viewer {
            width: 100%;  
            height: 100%; 
            border: none;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <%- include('navbar') %>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container-fluid">
            <div class="row align-items-center">
                <!-- Text Section -->
                <div class="col-md-6 text-center text-md-start">
                    <h1 class="display-3">Nirva-Agni</h1>
                    <p class="lead">AI-Powered Fire Extinguishing with Precision and Innovation</p>
                    <a href="/about" class="btn btn-primary btn-lg mt-3">Learn More</a>
                </div>
                
                <!-- 3D Model Section -->
                <div class="col-md-6">
                    <div class="hero-image">
                        <spline-viewer 
                            url="https://prod.spline.design/YDk3OHEwtxBupIE3/scene.splinecode" 
                            style="width: 100%; height: 100%; border: none;" 
                            disable-zoom="true" 
                            disable-rotation="true">
                        </spline-viewer>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Spline Viewer Script -->
    <script type="module" src="https://unpkg.com/@splinetool/viewer@1.9.56/build/spline-viewer.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleMenu() {
            const mobileNav = document.getElementById('mobileNav');
            mobileNav.style.display = mobileNav.style.display === 'flex' ? 'none' : 'flex';
        }
    </script>
</body>
</html>