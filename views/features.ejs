<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Features</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/features.css">
    <style>
        .spline-3d-container {
            display: flex;
            justify-content: center;
            align-items: flex-end; 
            height: 500px;
            position: relative;
        }
        
        .hero-image {
            width: 80%; 
            height: 400px; 
            position: absolute;
            bottom: 200px; 
            left: 400px; 
            transform: translateY(-30px); 
        }
        
        .title-section {
            padding: 50px 0;
            background-color: #343a40;
            color: white;
        }

        .cta {
            background-color: #343a40;
            color: white;
            padding: 50px 0;
        }
    </style>
</head>
<body>
    <!-- NavBar -->
    <%- include('navbar.ejs') %>

    <main>
        <!-- Title Section -->
        <section class="title-section py-3 text-center text-white bg-dark">
            <h1>Our Features</h1>
            <p>Explore the innovative features that set us apart.</p>
        </section>
    
        <!-- Features List -->
        <section class="features-list container">
            <div class="row">
                <div class="col-md-6 col-lg-4 feature-item animate-on-scroll mb-4">
                    <div class="feature-card p-3 shadow-sm rounded" data-aos="fade-up">
                        <img src="Image.jpg" alt="Advanced Fire Suppression Technology" class="img-fluid rounded mb-3">
                        <h2 class="h5 fw-bold">Advanced Fire Suppression Technology</h2>
                        <p>State-of-the-art fire extinguishing capabilities, ensuring rapid and effective response to fire incidents.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 feature-item animate-on-scroll mb-4">
                    <div class="feature-card p-3 shadow-sm rounded" data-aos="fade-up" data-aos-delay="100">
                        <img src="Image.jpg" alt="Automated Alert System" class="img-fluid rounded mb-3">
                        <h2 class="h5 fw-bold">Automated Alert System</h2>
                        <p>Instantly dispatches email notifications to relevant authorities upon fire detection, facilitating prompt emergency response.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 feature-item animate-on-scroll mb-4">
                    <div class="feature-card p-3 shadow-sm rounded" data-aos="fade-up" data-aos-delay="200">
                        <img src="Image.jpg" alt="Continuous CCTV Surveillance" class="img-fluid rounded mb-3">
                        <h2 class="h5 fw-bold">Continuous CCTV Surveillance</h2>
                        <p>Provides round-the-clock monitoring to ensure comprehensive security coverage and peace of mind.</p>
                    </div>
                </div>
            </div>
        </section>
    
    
        
        <!-- Spline 3D Model -->
        <section class="spline-3d-container my-5">
            <div class="hero-image">
                <spline-viewer 
                    url="https://prod.spline.design/HRFmVj4-oLGJehrU/scene.splinecode" 
                    style="width: 100%; height: 100%; border: none;" 
                    disable-zoom="true" 
                    disable-rotation="true">
                </spline-viewer>
            </div>
        </section>
    </main>
    <section class="cta text-center py-5 bg-dark">
        <h2 class="fw-bold mb-3">Ready to Experience Cutting-Edge Fire Safety?</h2>
        <a href="/contact" class="btn btn-primary btn-lg">Contact Us Today</a>
    </section>

    <script type="module" src="https://unpkg.com/@splinetool/viewer@1.9.56/build/spline-viewer.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => AOS.init());
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const observerOptions = {
            root: null,
            rootMargin: '10px',
            threshold: 0.25
        };
    
        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('show');
                    observer.unobserve(entry.target); // Stop observing once animation is triggered
                }
            });
        }, observerOptions);
    
        // Observe all elements with animate-on-scroll class
        document.addEventListener('DOMContentLoaded', () => AOS.init());
        document.addEventListener('DOMContentLoaded', () => {
            const animatedElements = document.querySelectorAll('.animate-on-scroll');
            animatedElements.forEach(el => observer.observe(el));
        });
    </script>
</body>
</html>
